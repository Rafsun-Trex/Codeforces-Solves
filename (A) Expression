#include<stdio.h>
int main()
{
    int a,b,c,max=0,x1,x2,x3,x4;
    scanf("%d %d %d",&a,&b,&c);
    x1=(a+b+c);
    x2=a*b*c;
    x3=a*(b+c);
    x4=(a+b)*c;
    if(x1>=max)
    {
        max=x1;
    }
    if(x2>=max)
    {
        max=x2;
    }
    if(x3>=max)
    {
        max=x3;
    }
    if(x4>=max)
    {
        max=x4;
    }
    
    printf("%d\n",max);
}
