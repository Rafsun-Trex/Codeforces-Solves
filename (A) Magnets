#include<stdio.h>
int main()
{
    int mag_num,i,arr[100000],count=0;
    scanf("%d",&mag_num);
    for(i=0;i<mag_num;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(i=0;i<mag_num;i++)
    {
        if(arr[i]!=arr[i+1])
        {
            count++;
        }
        else
        {
            continue;
        }
    }
    printf("%d\n",count);
}
