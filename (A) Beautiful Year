#include<stdio.h>
int main()
{
    int x,a,b,c,d;
    scanf("%d",&x);
    while (1)
    {
        x += 1;
        a = x / 1000;
        b = x / 100 % 10;
        c = x / 10 % 10;
        d = x % 10;
        if (a != b && a != c && a != d && b != c && b != d && c != d)
        {
            break;
        }
    }
    printf("%d\n",x);
}
