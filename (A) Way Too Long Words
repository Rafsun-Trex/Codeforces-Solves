#include<stdio.h>
#include<string.h>
int main()
{
    int n,i,x;
    char str[10000];
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%s",str);
        x = strlen(str);
        if(x<=10)
        {
            printf("%s\n",str);
        }
        else
        {
            printf("%c%d%c\n",str[0],x-2,str[x-1]);
        }

    }
}
